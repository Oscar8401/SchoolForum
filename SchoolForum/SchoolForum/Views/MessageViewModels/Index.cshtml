@model IEnumerable<SchoolForum.Models.ViewModel.MessagesViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <div class="container">
        <div class="text-center animated jackInTheBox">
            <p>
                <h3>Press</h3>
                <i class="glyphicon glyphicon-plus"></i> to create a new message.<br />
                <i>OR</i><br />
                <i class="glyphicon glyphicon-arrow-left"></i> to go back to the categories list.
            </p>
        </div>
    </div>
</div>
    <div class="row">
        <div class="col-md-11">
            @Html.ActionLink(" ", "Index", "SchoolForum", new { area = "" }, new { @class = "glyphicon glyphicon-arrow-left" })
        </div>
        <div class="col-md-1">
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink(" ", "Create", null, new { @class = "glyphicon glyphicon-plus addRow" })
            }
        </div>
    </div>
<table class="table table-hover table-responsive table-striped">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Title)*@
            <i class="fa fa-text-width"></i>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Text)*@
            <i class="fa fa-file-text-o"></i>
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.NumberOfMessages)
        </th>*@
        <th>
            @*@Html.DisplayNameFor(model => model.User)*@
            <i class="fa fa-user"></i>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.PostingDate)*@
            <i class="fa fa-calendar"></i>
        </th>
        <th>
            <i class="fa fa-file-text"></i>
            @*@Html.DisplayNameFor(model => model.CategoryName)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.NumberOfMessages)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.User)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" })<span></span>
                @*@Html.ActionLink(" ", "Details", new { id=item.Id }, new { @clss= "glyphicon glyphicon-align-justify"})<span></span>*@
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash removeButton" })<span></span>
            }
        </td>
    </tr>
}

</table>
