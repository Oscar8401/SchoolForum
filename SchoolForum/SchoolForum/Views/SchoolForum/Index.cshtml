@model IEnumerable<SchoolForum.Models.Categories>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <div class="container">
        <div class="animated jackInTheBox text-center"><h3>Lexicon it-proffs</h3> 
       <p>
           Welcome to Lexicon forum.<br />
           Please contact the admin for more information.
       </p>
            
                @using (Html.BeginForm("Index", "SchoolForum", FormMethod.Get))
                {
                    <p>
                        @Html.TextBox("SearchTerm",null, new { @class = "form-control", placeholder = "Search for..." })<br />
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </p>
                }
            
        </div>
    </div>
</div>



<h2>Classes</h2>
    @if (User.IsInRole("teacher"))
    {
     @Html.ActionLink("Category", "Create", null, new { @class="btn btn-primary glyphicon glyphicon-plus"})     
    }
    <br /> <br />
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Members)
         </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (User.IsInRole("teacher"))
            {
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-primary glyphicon glyphicon-trash" })<span> </span>
            }
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Members)
        </td>*@
        <td>
            @if (User.IsInRole("teacher"))
            {
                @Html.ActionLink("+||-", "Edit", new { id = item.Id }, new { @class="btn btn-primary"})<span></span> 
                @*@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class="btn btn-primary glyphicon glyphicon-minus"}) <span></span>*@
                @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
            }   
        </td>
    </tr>
}

</table>
