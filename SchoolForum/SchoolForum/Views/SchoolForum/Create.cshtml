            @Html.LabelFor(model => model.Members, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Members, new { @class = "form-control", @rows=3} )
                @Html.ValidationMessageFor(model => model.Members, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink(" ", "Index", null, new { @class = "glyphicon glyphicon-arrow-left" })<span></span>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
