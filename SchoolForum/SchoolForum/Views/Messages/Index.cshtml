@model IEnumerable<SchoolForum.Models.ViewModel.MessageViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <div class="container">
        ...
    </div>
</div>

<div>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("New Message", "Create", null, new { @class = "btn btn-primary" })
    }
</div><br />
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>
            <h3>Messages</h3>
        </th>
 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div>
                <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
